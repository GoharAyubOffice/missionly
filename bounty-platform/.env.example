# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ======================
# DATABASE CONFIGURATION
# ======================
# Supabase PostgreSQL connection string
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres"

# Direct connection URL (for Prisma migrations)
DIRECT_URL="postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres"

# ======================
# SUPABASE CONFIGURATION
# ======================
# Your Supabase project URL
# Format: https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"

# Public anon key (safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ======================
# STRIPE CONFIGURATION
# ======================
# Stripe publishable key (safe to expose in frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-publishable-key"

# Stripe secret key (KEEP SECRET)
STRIPE_SECRET_KEY="sk_test_your-secret-key"

# Stripe webhook secret for webhook verification
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ======================
# APPLICATION CONFIGURATION
# ======================
# Your application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node environment
NODE_ENV="development"

# ======================
# EMAIL CONFIGURATION (RESEND)
# ======================
# Resend API key for transactional emails
RESEND_API_KEY="re_your-resend-api-key"

# From email address for sending emails
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# ======================
# REDIS CONFIGURATION (UPSTASH)
# ======================
# Upstash Redis REST URL for caching
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"

# Upstash Redis REST token
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# ======================
# MONITORING & ANALYTICS
# ======================
# Sentry DSN for error tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Sentry organization (for source maps)
SENTRY_ORG="your-sentry-org"

# Sentry project (for source maps)
SENTRY_PROJECT="your-sentry-project"

# ======================
# WEB PUSH NOTIFICATIONS
# ======================
# VAPID public key for web push notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"

# VAPID private key (KEEP SECRET)
VAPID_PRIVATE_KEY="your-vapid-private-key"

# VAPID subject (email or URL)
VAPID_SUBJECT="mailto:your-email@yourdomain.com"

# ======================
# AUTHENTICATION (OPTIONAL)
# ======================
# NextAuth secret for JWT signing (if using NextAuth)
NEXTAUTH_SECRET="your-nextauth-secret"

# NextAuth URL
NEXTAUTH_URL="http://localhost:3000"

# ======================
# DEVELOPMENT TOOLS
# ======================
# Enable bundle analyzer
ANALYZE="false"

# ======================
# PRODUCTION OVERRIDES
# ======================
# For production, update these values:
# NEXT_PUBLIC_APP_URL="https://yourdomain.com"
# NODE_ENV="production"
# ANALYZE="false"